---
import SocialLinks from "./compose/SocialLinks.astro"

---

<div class="w-screen h-screen bg-center bg-black" style="background-image: url('fondo.png');">
  <div class="w-[70%] mx-auto h-full flex flex-col justify-center items-center text-white">
    <div class="text-center">
      <div class="relative w-fit mx-auto mb-8">
        <div class="absolute inset-0 rounded-full bg-[#1F2E4A] p-[3px]" style="transform: scale(1.05);"></div>
        <!-- Imagen de perfil -->
        <img src="foto-inicio.jpeg" alt="Foto de Sebastian Rodriguez" class="w-40 h-40 md:w-50 md:h-50 rounded-full object-cover relative z-10 border-2 border-[#F5F5F5]/40" />
        <!-- Destellos decorativos -->
        <div class="absolute top-0 right-0 w-3 h-3 bg-[#F7DC6F] rounded-full blur-sm animate-ping" style="animation-duration: 3s;"></div>
        <div class="absolute bottom-2 left-0 w-2 h-2 bg-[#E67E22] rounded-full blur-sm animate-ping" style="animation-duration: 4s;"></div>
      </div>
      <div class="p-4 bg-black/50 rounded-2xl">
          <h1 class="text-6xl font-bold mb-4 text-[#F5F5F5] drop-shadow-lg">Hola, soy Sebastian Rodriguez</h1>
          <p class="text-2xl text-end font-bold">Desarrollador Full Stack</p>
        </div>
        <div class="flex pt-5 mx-auto w-full justify-center">
          <SocialLinks />
        </div>
    </div>
  </div>
</div>

<style>
  @keyframes gradient-shift {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }
</style>